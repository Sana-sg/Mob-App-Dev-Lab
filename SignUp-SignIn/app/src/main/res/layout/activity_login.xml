<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:background="@drawable/back">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:typeface="serif"
        android:fontFamily="serif"
        android:textSize="40dp"
        android:shadowColor="#F87396"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="3"
        android:textStyle="bold"
        android:layout_marginTop="140dp"
        android:textColor="#EB144C"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/heading2"
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:inputType="textPersonName"
        android:hint="Username"
        android:layout_marginLeft="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColorHint="#C979F6"
        android:theme="@style/EditTextTheme"
        android:layout_below="@id/heading2"
        android:textStyle="bold"
        android:textColor="#380142"
        android:id="@+id/log_username"
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_below="@id/log_username"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColorHint="#C979F6"
        android:theme="@style/EditTextTheme"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:textColor="#380142"
        android:id="@+id/log_pwd"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Sign in"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_below="@id/log_pwd"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:background="@drawable/buttonstyle"
        android:textColor="#EDDADA"
        android:id="@+id/btn_login"

        />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Cancel"
        android:layout_below="@id/btn_login"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonstyle"
        android:textColor="#EDDADA"
        android:textAllCaps="false"
        android:id="@+id/btn_cancel2"

        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/toastmsg"
        android:text="Max attempts exceeded"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_below="@id/btn_cancel2"
        android:id="@+id/warn_text"
        android:gravity="center"
        android:visibility="gone"
        ></TextView>



</RelativeLayout>