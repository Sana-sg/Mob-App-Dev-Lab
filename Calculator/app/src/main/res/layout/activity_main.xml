<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4DADA"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:textSize="40sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:ems="10"
            android:inputType="textPersonName"
            android:textStyle="bold"
            android:padding="15dp"
            android:ellipsize="start"
            android:textColor="#121111"
            android:id="@+id/ip_text"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textSize="50dp"
            android:text=""
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/ip_text"
            android:textColor="@color/white"
            android:gravity="end"
            android:padding="10dp"
            android:ellipsize="start"
            android:id="@+id/op_text"
            ></TextView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:paddingBottom="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <Button
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="1"
                android:textSize="20sp"
                android:backgroundTint="#2C282A"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn1"></Button>

            <Button

                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_toRightOf="@id/btn1"
                android:textSize="20sp"
                android:backgroundTint="#2C282A"
                android:layout_marginLeft="10dp"
                android:text="2"
                android:id="@+id/btn2"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_toRightOf="@id/btn2"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="3"
                android:backgroundTint="#2C282A"
                android:id="@+id/btn3">
            </Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_below="@id/btn1"
                android:layout_alignParentStart="@id/btn1"
                android:layout_alignParentLeft="@id/btn1"
                android:text="4"
                android:textSize="20sp"
                android:backgroundTint="#2C282A"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn4"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_below="@id/btn2"
                android:layout_toRightOf="@id/btn4"
                android:textSize="20sp"
                android:text="5"
                android:backgroundTint="#2C282A"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn5"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_below="@id/btn3"
                android:layout_toRightOf="@id/btn5"
                android:textSize="20sp"
                android:text="6"
                android:backgroundTint="#2C282A"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn6"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_below="@id/btn4"
                android:layout_alignParentStart="@id/btn1"
                android:layout_alignParentLeft="@id/btn1"
                android:text="7"
                android:textSize="20sp"
                android:backgroundTint="#2C282A"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn7"></Button>

            <Button
                android:id="@+id/btn8"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_below="@id/btn5"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/btn7"
                android:backgroundTint="#2C282A"
                android:text="8"
                android:textSize="20sp"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_below="@id/btn6"
                android:layout_toRightOf="@id/btn8"
                android:textSize="20sp"
                android:text="9"
                android:backgroundTint="#2C282A"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn9"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_below="@id/btn7"
                android:layout_alignParentStart="@id/btn1"
                android:layout_alignParentLeft="@id/btn1"
                android:text="0"
                android:textSize="20sp"
                android:backgroundTint="#2C282A"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn0"></Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_below="@id/btn8"
                android:layout_toRightOf="@id/btn0"
                android:textSize="20sp"
                android:text="00"
                android:backgroundTint="#2C282A"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn00"></Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_below="@id/btn8"
                android:layout_toRightOf="@id/btn00"
                android:textSize="20sp"
                android:text="."
                android:backgroundTint="#2C282A"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn_dp"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_toRightOf="@id/btn3"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="+"
                android:textStyle="bold"
                android:backgroundTint="#716C6E"
                android:layout_marginRight="10dp"
                android:id="@+id/btn_add"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_below="@id/btn_add"
                android:layout_toRightOf="@id/btn6"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="#716C6E"
                android:layout_marginRight="10dp"
                android:text="-"
                android:id="@+id/btn_sub"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_below="@id/btn_sub"
                android:layout_toRightOf="@id/btn9"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="#716C6E"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:text="*"
                android:id="@+id/btn_mul"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_below="@id/btn_mul"
                android:layout_toRightOf="@id/btn_dp"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="#716C6E"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:text="/"
                android:id="@+id/btn_div"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_below="@id/btn_dp"
                android:layout_toRightOf="@id/btn00"
                android:text="="
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#17DC1F"
                android:id="@+id/btn_eql"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_below="@id/btn_div"
                android:layout_toRightOf="@id/btn_eql"
                android:text="C"
                android:textSize="30sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#DC1C0E"
                android:layout_marginRight="10dp"
                android:id="@+id/btn_clr"></Button>


        </RelativeLayout>




    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>